<section class="form">
  <div class="row">
    <fieldset class="small-8 small-centered columns">
      <%= form_for(@user, url: setting_update_path, method: :put) do |f| %>
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-6 columns field">
                <%= f.text_field :first_name,:autofocus => true, placeholder: "First Name" %>
              </div>
              <div class="small-6 columns field">
                <%= f.text_field :last_name, placeholder: "Last Name" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-12 columns field">
                <%= f.text_area :address,  placeholder: "Address", class: "edit-address" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-12 columns field">
                <%= f.text_field :phone_number,  placeholder: "Phone" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-12 columns field">
                <%= f.select(:constituency_id,get_constituencies_options) %>
              </div>
            </div>
          </div>
        </div>
        <!--
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-12 columns field">
                <%= f.text_field :username, placeholder: "Username" %>
              </div>
            </div>
          </div>
        </div> -->
        <!-- <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-12 columns field">
                <%= f.password_field :password, placeholder: "Password" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-12 columns field">
                <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
              </div>
            </div>
          </div>
        </div> -->
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-6 columns field">
                <%= image_tag @user.profile_pic.url %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row upload">
              <div class="small-6 columns center field">
                <label>Profile Pic:</label>
              </div>
              <div class="small-6 columns file-upload">
                <a class="file-upload-button">Upload</a>
                  <%= f.file_field :profile_pic %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="small-8 small-centered columns">
            <div class="row">
              <div class="small-12 columns field center">
                <input type="submit" style="height:60px; width:150px" class="login-button" value="Submit" />
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </fieldset>
  </div>
</section>

